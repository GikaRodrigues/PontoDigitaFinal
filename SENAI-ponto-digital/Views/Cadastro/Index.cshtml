@{
    ViewData["Title"] = "Cadastro - Agora Vai";
    ViewData["H2"] = "Cadastro";
}
<header>
    @{
        Html.RenderPartial("_HeaderNavBar");
    }
</header>

<main>
        <h2 class="h2_cadastro">@ViewData["H2"]</h2>
        <div class="form">
        <form method="POST" action='@Url.Action("Cadastrar", "Cadastro")'>
        <div class="Cadastro">
            <div class="cadastrar">
            <div>
                <label for="nome">Nome Completo</label>
                <br />
                <input id="nome" type="text" maxlength="50" minlength="3" name="nome" />
            </div>

            <div>
                <label for="endereco">Endere√ßo</label>
                <br />
                <input id="endereco" type="text" maxlength="50" minlength="3" name="endereco" />
            </div>

            <div>
                <label for="telefone">Telefone para contato</label>
                <br />
                <input id="telefone" type="text" name="telefone"/>
            </div>

            <div>
                <label for="email">E-mail</label>
                <br />
                <input id="email" type="email" name="email"/>
            </div>

            <div>
                <label for="senha">Senha</label>
                <br />
                <input id="senha" type="password" name="senha"/>
            </div>

            <div>
                <label for="confirmar-senha">Confirmar Senha</label>
                <br />
                <input id="confirmar-senha" type="password"/>
            </div>

            <div>
                <label for="data-nascimento">Data de Nascimento</label>
                <br />
                <input id="data-nascimento" type="date" name="data-nascimento"/>
            </div>

            </div>
            <div class="bt_cadastro">
            <input type="submit" value="Cadastrar!" />
            </div>
        </div>
        </form>
        </div>

    </main>